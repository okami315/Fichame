{% extends 'base.html.twig' %}

{% block title %}Editar Evento{% endblock %}

{% block body %}
    <div class="row justify-content-center mx-2">
        <div class="col-12 mt-3">
			{% include 'event/trabajadores.html.twig'%}
			<div class="row justify-content-around">
				<div class="col-11 col-md-6 mt-2" id="container">
					{% include 'comunes/_form.html.twig' with {'titulo': 'Edición del evento'} %}
				</div>
				<div class="col-12 col-md-4">
					<div class="p-3" id="container">
						<h2>Campos no editables</h2>	
						{% if event.status == 0 %}
							<i class="fas fa-circle" style="color: #E4FF5D;"></i>
						{% elseif event.status == 1 %}
							<i class="fas fa-circle" style="color: #FF0000;"></i>
						{% else %}
							<i class="fas fa-circle" style="color: #7EFF9D;"></i>
						{% endif %}
						<p>Trabajadores disponibles: {{ event.workersavailable }}/{{ event.workersnumber }}</p>
						<p>Conductores asignados: {{event.driversavailable }}/{{ event.driversnumber}}</p>
						<p>Sueldo: {{event.estimatedhours * 10 }}€</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %} 
